<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.richa.sugarthrow">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Sugar Throw"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DiaryActivity" />
        <activity android:name=".ProgressActivity"></activity>
        <activity android:name=".FoodDatabaseActivity"></activity>
        <activity android:name=".GameActivity"></activity>
        <activity android:name=".HelpActivity"></activity>
        <activity android:name=".InfoActivity"></activity>
        <activity android:name=".RiskActivity"></activity>
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>