<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.richa.sugarthrow.SettingsActivity"
    tools:showIn="@layout/settings_toolbar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settings_profile_text"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/profile"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.32"
                            android:gravity="center_vertical|start"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.07"
                            android:gravity="center_vertical|end"
                            android:text="@string/name_placeholder"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.32"
                            android:gravity="center_vertical|start"
                            android:text="@string/username"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/profile_username"
                            android:layout_width="175dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="@string/username_placeholder"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.70"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/height_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="@string/height"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/height_feet"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.05"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/height_foot"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.05"
                            android:gravity="center_vertical|end"
                            android:text="@string/ft"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/height_inches_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.04"
                            android:gravity="center_vertical|end"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/height_inches_measure"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.05"
                            android:gravity="center_vertical|end"
                            android:text="@string/in"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weight_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="@string/weight"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/weight_stone_measure"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.04"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/weight_stone"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.05"
                            android:gravity="center_vertical|end"
                            android:text="@string/st"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/weight_pound_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.07"
                            android:gravity="center_vertical|end"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/weight_pound_measure"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="0.05"
                            android:gravity="center_vertical|end"
                            android:text="@string/lb"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dob_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="@string/dob_profile"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/dob_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/points_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:text="@string/points"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/profile_points"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goals_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/settings_notifications"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/goals"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sync_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/settings_sync_text"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/sync"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sign_out_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settings_sign_out_text"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/sign_out"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
