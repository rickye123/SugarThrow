<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.richa.sugarthrow.DiaryActivity"
    tools:showIn="@layout/diary_toolbar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <SearchView
                android:id="@+id/diary_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </SearchView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/yesterdayChevron"
                    app:srcCompat="@drawable/ic_chevron_left_black" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="252dp"
                    android:layout_height="51dp"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/placeholder_date"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/date_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/tomorrowChevron"
                    app:srcCompat="@drawable/ic_chevron_right_black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wrapper_diary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/diary_entries"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/no_entry_wrapper"
                        android:layout_width="232dp"
                        android:layout_height="158dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/entry_text"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_weight="0.59"
                            android:background="@drawable/dashed_border"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/placeholder_no_entries"
                            android:textColor="@color/black"
                            android:textSize="24sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/reg_food"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/your_regular"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="313dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/firstRegItem"
                        android:layout_width="225dp"
                        android:layout_height="46dp"
                        android:layout_weight="1.00"
                        android:clickable="true"
                        android:gravity="start|center_vertical|center"
                        android:text="@string/placeholder_regFoods_1"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/addFirstReg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.00"
                        android:clickable="true"
                        android:contentDescription="@string/firstAdd"
                        app:srcCompat="@drawable/ic_add_circle_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/first_dropdown"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sugar_text"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_sugar"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sugar_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="1000"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sugar_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="g"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sugar_percent"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="73.4"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="20.2" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="%" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/calories_text"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_calories"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/calories_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="239"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/calories_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text=" "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/calories_percent"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="10"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent2"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fat_text"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_fat"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/fat_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0.3"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/fat_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="g"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/fat_percent"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="5"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent3"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sat_text"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_saturates"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sat_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0.8"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sat_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="g"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sat_percent"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="10.67"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent4"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/carbs_text"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_carbs"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/carbs_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="54.5"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/carbs_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="g"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/carbs_percent"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="45.01"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent5"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/salt_text"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_salt"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/salt_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0.8712"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/salt_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="g"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/salt_percent"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="90.5"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent6"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/protein_text"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dropdown_protein"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/protein_quant"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0.5"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/protein_measure"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="g"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/protein_percent"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0.005"
                            android:textColor="@color/darkGreen" />

                        <TextView
                            android:id="@+id/percent7"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="%"
                            android:textColor="@color/darkGreen" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="313dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/secondRegItem"
                    android:layout_width="225dp"
                    android:layout_height="46dp"
                    android:layout_weight="1.00"
                    android:gravity="start|center_vertical|center"
                    android:text="@string/placeholder_regFoods_2"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/addSecondReg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:clickable="true"
                    android:contentDescription="@string/secondAdd"
                    app:srcCompat="@drawable/ic_add_circle_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="313dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/thirdRegItem"
                    android:layout_width="225dp"
                    android:layout_height="46dp"
                    android:layout_weight="1.00"
                    android:gravity="start|center_vertical|center"
                    android:text="@string/placeholder_regFoods_3"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/addThirdReg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:clickable="true"
                    android:contentDescription="@string/thirdAdd"
                    app:srcCompat="@drawable/ic_add_circle_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="313dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fourthRegItem"
                    android:layout_width="225dp"
                    android:layout_height="46dp"
                    android:layout_weight="1.00"
                    android:gravity="start|center_vertical|center"
                    android:text="@string/placeholder_regFoods_4"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/addFourthReg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:clickable="true"
                    android:contentDescription="@string/fourthAdd"
                    app:srcCompat="@drawable/ic_add_circle_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="313dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fifthRegItem"
                    android:layout_width="225dp"
                    android:layout_height="46dp"
                    android:layout_weight="1.00"
                    android:gravity="start|center_vertical|center"
                    android:text="@string/placeholder_regFoods_5"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/addFifthReg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:clickable="true"
                    android:contentDescription="@string/fifthAdd"
                    app:srcCompat="@drawable/ic_add_circle_black" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
